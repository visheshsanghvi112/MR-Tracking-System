# MR Bot Environment Configuration
# Copy this to .env and fill in your values

# ============================================================
# CORE SETTINGS
# ============================================================

# Telegram Bot Token (get from @BotFather)
MR_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_ID=your_telegram_user_id

# Google Sheets Configuration
MR_SPREADSHEET_ID=your_google_spreadsheet_id_here
GOOGLE_SHEETS_CREDENTIALS=path_to_service_account.json

# Authorized MR User IDs (comma-separated Telegram user IDs)
AUTHORIZED_MR_IDS=123456789,987654321

# ============================================================
# AI CONFIGURATION
# ============================================================

# Gemini API Keys (get from https://aistudio.google.com/apikey)
# Multiple keys enable rotation when rate limited
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_KEY_2=optional_second_key
GEMINI_API_KEY_3=optional_third_key

# ============================================================
# LOCATION SETTINGS
# ============================================================

GPS_REQUIRED=true
ALLOW_MANUAL_LOCATION=true
LOCATION_SESSION_DURATION=300

# ============================================================
# PRODUCTION SETTINGS
# ============================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Sentry Error Tracking (get DSN from https://sentry.io)
# Leave empty to disable error tracking
SENTRY_DSN=

# App version for tracking
APP_VERSION=2.1.0

# API Key for dashboard access
API_KEY=mr-tracking-2025

# ============================================================
# LOGGING & MONITORING
# ============================================================

LOG_LEVEL=INFO
DATA_DIR=data

# ============================================================
# VERCEL DEPLOYMENT (for CI/CD)
# ============================================================

# Add these to GitHub Secrets, not here:
# VERCEL_TOKEN=xxx
# VERCEL_ORG_ID=xxx
# VERCEL_PROJECT_ID_BACKEND=xxx
# VERCEL_PROJECT_ID_FRONTEND=xxx
